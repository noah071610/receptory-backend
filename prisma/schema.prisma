generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  userId  Int  @id @default(autoincrement())
  email String @unique
  userImage String?
  userName  String
  provider String
  plan Int @default(0)
  password String?

  saves Save[]
  pages Page[]
  createdAt DateTime @default(now())
}

model Save {
  pageId String @id @unique
  thumbnail String?
  title String?
  description String?
  format String
  lang String
  
  content Json

  userId Int
  user User  @relation(fields: [userId], references: [userId])

  page Page?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Page {
  pageId String @id @unique
  thumbnail String
  title String 
  description String
  format String
  lang String
  
  content Json

  save Save  @relation(fields: [pageId], references: [pageId])

  userId Int
  user User  @relation(fields: [userId], references: [userId])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

}
